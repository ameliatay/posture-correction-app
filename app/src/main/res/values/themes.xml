<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostureCorrectionApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/offWhite</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderOne" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_heavy_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="HeaderTwo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderTwoWhite" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderThree" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subtitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Search" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinkButton" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/pink</item>
    </style>

</resources>