<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MainTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/offWhite</item>
    </style>

    <style name="HeaderOne" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_heavy_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="HeaderTwo" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderTwoWhite" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderThree" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubtitleLarge" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Subtitle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Search" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/searchview_bg</item>
        <!-- Customize the color of the search icon -->
        <item name="searchIcon">@drawable/search</item>

    </style>


    <style name="PinkButton" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="cornerRadius">8sp</item>
        <item name="minWidth">0dp</item>
    </style>

    <style name="NavBarText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavBarTextActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/lato_heavy_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gray_200</item>
    </style>

    <style name="ProgramToggleButton" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/offWhite</item>
        <item name="android:textAlignment">textStart</item>
    </style>

</resources>