<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.QuestionnaireActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <TextView
        android:id="@+id/tvUserGreeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="28sp"
        android:text="Let's get started!"
        android:theme="@style/HeaderOne" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="24sp"
        android:paddingBottom="4sp"
        android:text="What's your name?"
        android:theme="@style/HeaderTwo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="6sp"
                app:cardElevation="0sp"
                app:strokeColor="@color/darkBlue"
                app:strokeWidth="1sp"
                app:cardBackgroundColor="@color/offWhite"
                app:cardCornerRadius="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12sp"
                    android:theme="@style/Search"
                    android:hint="Your name"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="16sp"
        android:paddingBottom="4sp"
        android:text="How old are you?"
        android:theme="@style/HeaderTwo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="6sp"
                app:cardElevation="0sp"
                app:strokeColor="@color/darkBlue"
                app:strokeWidth="1sp"
                app:cardBackgroundColor="@color/offWhite"
                app:cardCornerRadius="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12sp"
                    android:theme="@style/Search"
                    android:hint="Your age"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="16sp"
        android:paddingBottom="4sp"
        android:text="Your height?"
        android:theme="@style/HeaderTwo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="6sp"
                app:cardElevation="0sp"
                app:strokeColor="@color/darkBlue"
                app:strokeWidth="1sp"
                app:cardBackgroundColor="@color/offWhite"
                app:cardCornerRadius="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12sp"
                    android:theme="@style/Search"
                    android:hint="Your height"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="16sp"
        android:paddingBottom="4sp"
        android:text="Your weight?"
        android:theme="@style/HeaderTwo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="6sp"
                app:cardElevation="0sp"
                app:strokeColor="@color/darkBlue"
                app:strokeWidth="1sp"
                app:cardBackgroundColor="@color/offWhite"
                app:cardCornerRadius="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12sp"
                    android:theme="@style/Search"
                    android:hint="Your weight"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="16sp"
        android:paddingBottom="4sp"
        android:text="How active are you?"
        android:theme="@style/HeaderTwo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="6sp"
                app:cardElevation="0sp"
                app:strokeColor="@color/darkBlue"
                app:strokeWidth="1sp"
                app:cardBackgroundColor="@color/offWhite"
                app:cardCornerRadius="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12sp"
                    android:theme="@style/Search"
                    android:hint="Your activity level"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24sp"
        android:paddingTop="16sp"
        android:paddingBottom="4sp"
        android:text="What's your goal?"
        android:theme="@style/HeaderTwo" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="6sp"
                app:cardElevation="0sp"
                app:strokeColor="@color/darkBlue"
                app:strokeWidth="1sp"
                app:cardBackgroundColor="@color/offWhite"
                app:cardCornerRadius="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12sp"
                    android:theme="@style/Search"
                    android:hint="Your goal"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/PinkButton"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="32sp"
                app:cornerRadius="8sp"
                android:onClick="goToHome"
                android:layout_gravity="center"
                android:text="SUBMIT" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>