<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:paddingTop="24sp"
        android:paddingHorizontal="24sp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:onClick="backButtonClicked"
            android:scaleType="centerCrop" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="8sp"
            android:layout_marginVertical="12sp"
            app:cardBackgroundColor="#F1EFED"
            app:cardElevation="0sp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12sp"
                    android:paddingVertical="12sp"
                    android:src="@drawable/search"
                    android:scaleType="centerCrop" />

                <EditText
                    android:id="@+id/search_button"
                    android:layout_width="230sp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8sp"
                    android:theme="@style/Search"
                    android:hint="Search for exercises"
                    android:background="@null"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24sp"
        android:paddingTop="6sp"
        android:paddingBottom="12sp"
        android:theme="@style/HeaderTwo"
        android:text="Search Results" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exercises_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:clipToPadding="false" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>