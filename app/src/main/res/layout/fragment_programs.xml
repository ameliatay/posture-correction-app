<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvUserGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24sp"
                android:paddingTop="28sp"
                android:text="Programs"
                android:theme="@style/HeaderOne" />

            <!-- search bar-->

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="24sp"
                android:layout_marginVertical="12sp"
                android:iconifiedByDefault="false"
                android:queryHint="Search for Exercises"/>
<!--                android:theme="@style/MySearchViewStyle" -->
                />

            <!--        hiit program-->
            <TextView
                android:id="@+id/hiit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24sp"
                android:paddingTop="24sp"
                android:paddingBottom="4sp"
                android:text="HIIT"
                android:theme="@style/HeaderTwo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hiit_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:clipToPadding="false" />

            <!--        barre program-->
            <TextView
                android:id="@+id/barre_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24sp"
                android:paddingTop="24sp"
                android:paddingBottom="4sp"
                android:text="Barre"
                android:theme="@style/HeaderTwo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/barre_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:clipToPadding="false" />

            <!--        crossfit program-->
            <TextView
                android:id="@+id/crossfit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24sp"
                android:paddingTop="24sp"
                android:paddingBottom="4sp"
                android:text="Crossfit"
                android:theme="@style/HeaderTwo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/crossfit_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:clipToPadding="false" />

            <!--        pilates program-->
            <TextView
                android:id="@+id/pilates_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24sp"
                android:paddingTop="24sp"
                android:paddingBottom="4sp"
                android:text="Pilates"
                android:theme="@style/HeaderTwo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pilates_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:clipToPadding="false" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>